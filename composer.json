{
  "name": "vendor/nvmphp",
  "description": "A PHP package to manage Node.js installations",
  "type": "library",
  "version": "0.1.0",
  "autoload": {
    "psr-4": {
      "Vendor\\nvmPhp\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1"
  },
    "scripts": {
        "node-available-versions": [
            "@php -r \"require 'vendor/autoload.php'; Vendor\\nvmPhp\\nvmPhp::printNodeVersions();\""
        ],
        "node-installed-versions": [
            "@php -r \"require 'vendor/autoload.php'; Vendor\\nvmPhp\\nvmPhp::listInstalledNodeVersions();\""
        ],
        "node-uninstall": [
            "@php -r \"require 'vendor/autoload.php'; Vendor\\nvmPhp\\nvmPhp::uninstallAllVersions();\""
        ],
        "node-install": [
            "@php src/install-node.php"
        ],
        "node-run": [
            "@php src/node-run.php"
        ]
    }
}
